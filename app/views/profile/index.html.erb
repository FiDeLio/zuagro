<div class="row">
  <div class="col-md-10 tab-content-custom">
    <fieldset>
      <legend>Datos Personales</legend>
      <div class="form-group has-legend">
        <label class="col-md-2 control-label">E-mail</label>
        <div class="col-md-10">
          <div class="input-group">
            <%= current_user.email %>
          </div>
          <span class="help-block">&nbsp;</span>
        </div>
      </div>
      <div class="form-group has-legend">
        <label class="col-md-2 control-label">Nombre</label>
        <div class="col-md-10">
          <input class="form-control input-sm" type="text" name="name" id="name" autofocus>
          <span class="help-block">&nbsp;</span>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Seguridad - cambiar clave</legend>
      <div class="form-group has-legend">
        <label class="col-md-2 control-label">Clave</label>
        <div class="col-md-10">
          <input class="form-control input-sm" type="text" name="name" id="password">
          <span class="help-block">&nbsp;</span>
        </div>
      </div>
        <div class="form-group has-legend">
          <label class="col-md-2 control-label">Repita Clave</label>
        <div class="col-md-10">
          <input class="form-control input-sm" type="text" name="name" id="reppassword">
          <span class="help-block">&nbsp;</span>
        </div>
      </div>
    </fieldset>

    <div class="form-group has-legend">
      <button id="btn-save-profile" class="btn btn-primary">
        Actualizar
      </button>
    </div>
  </div>
</div>


<script type="text/javascript">
    Account.init();
</script>